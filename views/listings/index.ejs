<% layout("/layouts/boilerplate") -%>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }

        .filter:hover {
            cursor: pointer;
            opacity: 1;
        }

        .filter p {
            font-size: 12px;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: .5rem;
            height: 2.5rem;
            padding: .5rem;
            margin-left: 5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .original-price {
            display: inline;
        }

        /* Collapse filters on small screens */
@media (max-width: 768px) {
  #filters {
    display: none;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .show-filters {
    display: flex !important;
  }

  .filter {
    width: 22%;
    text-align: center;
  }

  .tax-toggle {
    width: 100%;
    margin-top: 1rem;
    justify-content: center;
  }
  
}



        
    </style>

    <body>
        <!-- Toggle Button for Mobile -->
        <button class="btn btn-outline-dark d-md-none mb-3 mt-3" id="filterToggle">
            <i class="fa-solid fa-sliders"></i> Filters
        </button>

        <!-- Filters Container -->

        <div id="filters" class="filters-collapse">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountaines</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountaines</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-water-ladder"></i></div>
                <p>Amazing Pool</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
            <% for(let listing of allListing){ %>
                <a href="listings/<%= listing._id %>" class="listing-links">
                    <div class="card col listing-card" style="width: 22rem;">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                            style="height: 15rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p><b>
                                    <%= listing.title %>
                                </b></p>
                            <p class="original-price">Price &#8377;<%= listing.price.toLocaleString("en-IN") %>/Night
                                    <i class="tax-info">&nbsp; &nbsp;+<%= (listing.price * 18 /
                                            100).toLocaleString("en-IN") %>GST
                                    </i>
                            </p>

                        </div>
                    </div>
                </a>
                <% } %>
        </div>

        <!-- <ul>
            <% for(let listing of allListing){ %>
                <li><a href="listing/<%= listing._id %>">
                        <%= listing.title %>
                    </a></li>
                <% } %>
        </ul> -->
    </body>

    <script>
        let taxSwitch = document.getElementById("switchCheckDefault")
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info")
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline"
                } else {
                    info.style.display = "none";

                }
            }
        });

        let toggleBtn = document.getElementById("filterToggle");
        let filtersBox = document.getElementById("filters");

        toggleBtn.addEventListener("click", () => {
            filtersBox.classList.toggle("show-filters");
        });

    </script>