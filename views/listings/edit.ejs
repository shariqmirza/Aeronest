<% layout("/layouts/boilerplate") -%>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Edit Your Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title:</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">Provide Valid Title</div>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description:</label>
                    <input type="text" name="listing[description]" value="<%= listing.description %>"
                        class="form-control" required>
                    <div class="invalid-feedback">Provide Valid Description</div>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <p>Previous Image</p>
                    <img src="<%= originalImageURL %>" alt="">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Upload Image:</label>
                    <input type="file" name="listing[image]" class="form-control" >
                </div>
                <div class="mb-3">
                    <label for="price" class="form-lable">Price:</label>
                    <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                    <div class="invalid-feedback">Provide Valid Price</div>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="location" class="form-lable">Location:</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>"
                            class="form-control" required>
                        <div class="invalid-feedback">Provide Valid Location</div>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country:</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                        <div class="invalid-feedback">Provide Valid Country</div>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                </div>
                <button class="btn btn-dark add-btn mb-3">Update</button>
            </form>
        </div>
    </div>